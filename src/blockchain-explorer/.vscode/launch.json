  "version": "0.2.0",
  "configurations": [    
    {
      "name": "Attach to Process",
      "type": "node",
      "request": "attach",
      "port": 9229,      
      "cwd": "${workspaceRoot}",      
      "stopOnEntry": false,
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }    
  ]
}
