  "version": "0.2.0",
  "configurations": [
    {
      "name": "All tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "./test/*Spec.js",
        "--recursive",
        "--require",
        "./test/testSetup.js",                
        "--no-timeout",
        "--colors"
      ],
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Current file",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
            "--require",
            "./test/testSetup.js",                
            "--no-timeout",            
            "--colors",
            "${file}"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
    }
  ]
}
