{
  "name": "@joj/blockchain",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "description": "Simple blockchain primitives",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^8.2.6",
    "chai": "4.1.0",
    "eslint": "^4.18.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-flowtype-errors": "^3.3.6",
    "eslint-plugin-fp": "^2.3.0",
    "flow-bin": "^0.59.0",
    "mocha": "^5.0.5",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@joj/adt": "file:../adt/dist",
    "websocket": "^1.0.28"
  },
  "scripts": {
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "build": "rm -rf dist && babel src --out-dir dist && cp -f package.json dist",
    "test": "mocha --recursive --require test/testSetup.js --check-leaks --colors",
    "test-dev": "nodemon --watch src/ --watch test/ --exec 'mocha --recursive --require test/testSetup --colors || true'",
    "test-debug": "LOG=trace mocha --recursive --require test/testSetup test/**/*Spec.js --check-leaks --colors",
    "flow": "flow",
    "flow-init": "flow init",
    "flow-status": "flow status",
    "start-app": "nodemon --exec babel-node -- src/app.js",
    "start-peer0": "nodemon --exec babel-node -- src/p2p/node.js 3000",
    "start-peer1": "nodemon --exec babel-node -- src/p2p/node.js 3001",
    "start-peer2": "nodemon --exec babel-node -- src/p2p/node.js 3002"
  }
}
