{
  "name": "@joj/blockchain",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "description": "Simple blockchain primitives",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-dynamic-import-node-babel-7": "^2.0.7",
    "chai": "4.1.0",
    "eslint": "^4.18.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-flowtype-errors": "^3.3.6",
    "eslint-plugin-fp": "^2.3.0",
    "flow-bin": "^0.59.0",
    "mocha": "^5.0.5",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5"
  },
  "scripts": {
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "build": "rm -rf dist && babel src --out-dir dist && cp -f package.json dist",
    "test-all": "NODE_PATH=$NODE_PATH:src/lib mocha src test **/*.spec.js --exclude src/app.js --recursive --require test/testSetup.js --check-leaks --colors",
    "test": "NODE_PATH=$NODE_PATH:src/lib mocha --exclude src/app.js --recursive --require test/testSetup.js --check-leaks --colors",
    "test-dev": "NODE_PATH=$NODE_PATH:src/lib nodemon --watch src/ --watch test/ --exec 'mocha --exclude src/app.js --recursive --require test/testSetup --colors || true'",
    "test-debug": "NODE_PATH=$NODE_PATH:src/lib LOG=trace mocha --recursive --exclude src/app.js --require test/testSetup test/**/*Spec.js --check-leaks --colors",
    "flow": "flow",
    "flow-init": "flow init",
    "flow-status": "flow status",
    "start": "nodemon --exec babel-node -- src/app.js",
    "start-server": "nodemon --exec babel-node -- src/infrastructure/server/index.js"
  }
}
