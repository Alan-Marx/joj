{
  "name": "@joj/blockchain",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "description": "Simple blockchain primitives",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-flow": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0-beta.49",
    "babel-eslint": "^8.2.3",
    "chai": "4.1.0",
    "eslint": "^4.18.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-flowtype-errors": "^3.3.6",
    "eslint-plugin-fp": "^2.3.0",
    "flow-bin": "^0.59.0",
    "mocha": "^5.0.5",
    "nodemon": "^1.11.0",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.55",
    "@joj/adt": "file:../adt/dist",
    "websocket": "^1.0.26"
  },
  "scripts": {
    "lint": "eslint src",
    "lint-fix": "eslint src --fix",
    "build": "rm -rf dist && babel src --out-dir dist && cp -f package.json dist",
    "test": "mocha --recursive --require test/testSetup.js --check-leaks --colors",
    "test-dev": "nodemon --watch src/ --watch test/ --exec 'mocha --recursive --require test/testSetup --colors || true'",
    "test-debug": "LOG=trace mocha --recursive --require test/testSetup test/**/*Spec.js --check-leaks --colors",
    "flow": "flow",
    "flow-init": "flow init",
    "flow-status": "flow status",
    "start": "nodemon --exec babel-node -- ./src/server/index.js"
